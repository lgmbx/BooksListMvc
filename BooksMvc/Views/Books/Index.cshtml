@model IEnumerable<BooksMvc.Models.Book>
@{
}

<div class="row container m-0 p-0">
    <div class="col-3">
        <h2 class="text-info">Book List</h2>

    </div>
</div>

<br />







<div class="container">
    <div class="row">


        <table class="col-8 table table-bordered table-striped table-hover">
            <thead class="success thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ISBN)
                    </th>
                    <th style="width:160px">
                        <a asp-action="Create" class="btn btn-info btn-sm" style="">Create New Book</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(itemModel => item.Name)</td>

                        <td>@Html.DisplayFor(itemModel => item.Author)</td>

                        <td>@Html.DisplayFor(itemModel => item.ISBN)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info text-white btn-sm mr-2 px-3">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
